<%= erb :game_header %>
<div>
  <h3><%= @game.player_1.name %> vs. <%= @game.player_2.name %></h3>
</div>
<div>
  <h4><i><%= @game.player_2.name %>, choose your weapon...</i></h4><br>
  <h4><%= @game.player_1.name %>, look away now!</h4>
</div>
<section>
  <form action='/player_2_play' method='post'>
    <input type='submit' name='weapon' value="ROCK">
    <input type='submit' name='weapon' value="PAPER">
    <input type='submit' name='weapon' value="SCISSORS">
  </form>
</section>
